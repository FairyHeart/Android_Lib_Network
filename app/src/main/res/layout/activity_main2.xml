<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="activity"
            type="com.lib.android_lib_network.MainActivity" />
    </data>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/btn"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.lib.android_lib_network.MainActivity">

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:onClick="@{()->activity.goToLoginActivity()}"
            android:layout_height="wrap_content"
            android:text="Login Activity" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="@{()->activity.goToScopeActivity()}"
            android:text="ScopeRetrofit Activity" />
    </androidx.appcompat.widget.LinearLayoutCompat>
</layout>